<div class="pageTitle text-center py-5">
    <h1><strong>{{title}}</strong></h1>
</div>

<div class="container">
    <h2>Blog Entries</h2>
    <div class="row">
        <div class="col-lg-12">
            <ul id="blogList"></ul>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script type="text/javascript">
    // on ready load recent blog posts
    $(function() {
        $.get('/blog/listing', function(err, data) {
        	if (data.length > 0) {
                data.forEach(function (element) {
                    $('#blogList').append('<li>' + element.title + '<li>');
                });
            }
        });
    });
</script>