<div class="pageTitle text-center py-5">
    <h1><strong>{{title}}</strong></h1>
</div>

<div class="container">
    <input id="postId" type="hidden" value="{{ postId }}">

    <div id="errorRow" class="row d-none"></div>
    <div id="postRow" class="row">
        <h2 id="postTitle"></h2><strong id="postCreatedDate"></strong>
        <div id="postDiv" class="col-lg-12">
            <p id="postParagraph"></p>
        </div>
    </div>
</div>

<script type="text/javascript">
    // on ready load recent blog posts
    $(function() {
        $.get('/blog/post' + $('#postId').val(), function(err, post) {
        	if (err) {
                $('#errorRow').text(err);
            } else {
                $('#postTitle').text(post.title);
                $('#postCreatedDate').text(post.createdDate);
                $('#postParagraph').text(post.text);
            }
        });
    });
</script>